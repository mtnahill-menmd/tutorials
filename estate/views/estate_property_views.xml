<?xml version="1.0"?>
<odoo>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Title">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="best_price" string="Best Offer"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <field name="tag_ids" string="" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="new_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="New Property">
                <header>
                    <button name="cancel_property" type="object" string="CANCEL"/>
                    <button name="sold_property" type="object" string="SOLD"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" string=""/></h1>
                        <field name="tag_ids" string="" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="state" string="Status"/>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage" />
                                <field name="garden" string="Garden" />
                                <field name="garden_area" string="Garden Area (sqm)"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                                <field name="total_area" string="Total Area (sqm)"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" string="">
                                    <tree string="Offer">
                                        <field name="price" string="Price"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="validity" string="Validity (days)"/>
                                        <field name="date_deadline" string="Deadline"/>
                                        <button name="accept_offer" string="" type="object" icon="fa-check"/>
                                        <button name="refuse_offer" string="" type="object" icon="fa-times"/>
                                        <field name="status" string="Status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id" string="Salesman"/>
                                <field name="partner_id" string="Buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="facades" string="Facades"/>
                <filter name="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"/>
                <filter string="Postal code" name="groupby_category" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
    <record id="property_view_tree_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="property_view_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <form>
            <field name="Property Types"/>
            <field name="property_ids">
                <tree>
                    <field name="name"/>
                    <field name="expected_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </form>
    </record>
    <record id="property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offer">
                <field name="price" string="Price"/>
                <field name="status" string="Status"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
            </tree>
        </field>
    </record>
</odoo>