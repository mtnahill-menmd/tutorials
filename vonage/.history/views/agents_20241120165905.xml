
<odoo>
    <record id="view_vcc_agent_form" model="ir.ui.view">
        <field name="name">vcc.agent.form</field>
        <field name="model">vcc.agent</field>
        <field name="arch" type="xml">
            <form string="VCC Agent">
                <header>
                    <button name="query_agent" type="object" string="Fetch Agents" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="agent_id"/>
                        <field name="presence_ids"/>
                        <field name="workload_ids"/>
                        <field name="interaction_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>