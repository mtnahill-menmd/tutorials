<odoo>
    <record id="view_api_token_form" model="ir.ui.view">
        <field name="name">api.token.form</field>
        <field name="model">api.token</field>
        <field name="arch" type="xml">
            <form string="API Token Management">
                <group>
                    <field name="token" readonly="1"/>
                    <field name="expiration" readonly="1"/>
                    <button name="action_test_token" type="object" string="Test Token" class="btn-primary"/>
                    <button name="refresh_token" type="object" string="Refresh Token" class="btn-secondary"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_api_token" model="ir.actions.act_window">
        <field name="name">API Token</field>
        <field name="res_model">api.token</field>
        <field name="view_mode">form</field>
    </record>
    
    <menuitem id="menu_api_token" name="API Token" parent="menu_vcc_root" action="action_api_token" sequence="60"/>
</odoo>