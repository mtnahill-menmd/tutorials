<?xml version="1.0"?>
<odoo>

    <!-- Action -->
    <record id="action_vcc_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">vcc.agent</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_vcc_agent_tree"/> <!-- Explicitly link tree view -->
    </record>

    <!-- Tree View -->
    <record id="view_vcc_agent_tree" model="ir.ui.view">
        <field name="name">vcc.agent.tree</field>
        <field name="model">vcc.agent</field>
        <field name="arch" type="xml">
            <tree string="Agents">
                <header>
                    <!-- Button for Fetch Agents -->
                    <button name="query_agent" type="object" string="Fetch Agents" class="btn-primary" context="{'active_model': 'vcc.agent'}"/>
                </header>
                <field name="username"/>
                <field name="name"/>
                <field name="email"/>
                <field name="last_login_time"/>
                <field name="sso_external_id"/>>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vcc_agent_form" model="ir.ui.view">
        <field name="name">vcc.agent.form</field>
        <field name="model">vcc.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <header>
                    <!-- Button for Fetch Agents -->
                    <button name="query_agent" type="object" string="Fetch Agents" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="username"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

